@using WasteRegistry.UI
@using WasteRegistry.UI.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}
@model WasteRegistry.UI.Models.WasteRegistryViewModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-body table-responsive">
                <table id="WasteTable" class="table-responsive-lg table-striped table-bordered" style="width:100%;font-size:small">
                    <thead>
                        <tr>
                            <th class="text-center" data-field="Id">Id</th>
                            <th class="text-center" data-field="Store">Store</th>
                            <th class="text-center" data-field="Month">Month</th>
                            <th class="text-center" data-field="WasteKind">WasteKind</th>
                            <th class="text-center" data-field="Quantity">Quantity</th>
                            <th class="text-center" data-field="QuantityUnit">QuantityUnit</th>
                            <th class="text-center" data-field="WasteType">WasteType</th>
                            <th class="text-center" data-field="RecipientCompany">RecipientCompany</th>
                            <th class="text-center" data-field="WasteDate">WasteDate</th>
                            <th class="text-center" data-field="Content">Content</th>
                            <th class="text-center" style="white-space: nowrap">
                                <button class="btn btn-success btn-sm" data-title="Add" data-toggle="modal" data-target="#add">
                                    <i class="fa fa-plus-square"></i>
                                </button>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Atık Düzenle</h4>
            </div>
            @{
                Html.RenderPartial("WasteRegistryModal");
            }
            <div class="modal-footer ">
                <button type="button" Onclick="myUpdateFunction()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Kaydet </button>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Atık Ekle</h4>
            </div>
            @{
                Html.RenderPartial("WasteRegistryModal");
            }
            <div class="modal-footer ">
                <button type="button" Onclick="myAddFunction()" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Kaydet </button>
            </div>

        </div>
    </div>
</div>